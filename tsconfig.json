{
  "compilerOptions": {
    "target": "ES2016",

    // Declare for node
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,

    // Only use tsc to declare a d.ts
    "emitDeclarationOnly": true,
    "declaration": true,

    "removeComments": false,

    "typeRoots": ["node_modules/@types", "typings"],
    "skipLibCheck": true
  },
  "exclude": ["test/*", "node_modules"],
  "ts-node": {
    "swc": true
  }
}
